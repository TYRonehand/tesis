<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.HTMLheader {
		padding: 60px 10px 30px 30px;
	}
	.panel {
		border-bottom: solid 30px white;
	}
	
	.titleText {
		text-transform: uppercase;
		color: #333;
	    font-family: Roboto,sans-serif;
		font-size: 24px;
		font-weight: 800;
		line-height: 36px;
		margin: 0 0 24px;
		text-align: center;
	}
	
	
	.sitemap{        
	    color: #666;
	    font-family: Roboto,sans-serif;
		font-weight: 700;
		line-height: 32px;
		margin: 0 0 24px;
	}
	
	
	</ui:style>
	<g:HTMLPanel addStyleNames='{style.HTMLheader}'>
	
		
		<div class="col-md-4 col-sm-5 col-xs-12">
	
			<g:VerticalPanel  spacing="8" width="100%" height="100%" verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_LEFT">
				<g:Image url="assets/img/ucsc_init_footer.svg" width="250px"/>
			</g:VerticalPanel>
		</div>
		
		<div class="col-md-4 col-sm-5 col-xs-12">
			<g:VerticalPanel  spacing="8">
				<g:HTMLPanel>
					<p><a href="http://www.ucsc.cl/donde-estamos/campus-san-andres/"><strong>CAMPUS SAN ANDRÉS</strong></a></p>
				</g:HTMLPanel>
			</g:VerticalPanel>
			<g:VerticalPanel spacing="0">
				<g:HTMLPanel><p>Alonso de Ribera 2850, Concepción, Chile</p></g:HTMLPanel>
				<g:HTMLPanel><p>Phone: <strong>+56 41 234 50 00</strong></p></g:HTMLPanel>
				<g:HTMLPanel><p>Fax: <strong>+56 41 234 50 01</strong></p> </g:HTMLPanel>
				<g:HTMLPanel><p>Our headquarters in the region:</p></g:HTMLPanel>
			</g:VerticalPanel>
			
			<g:VerticalPanel addStyleNames="{style.panel}" spacing="4">
				<g:HTMLPanel>
					<p><strong>
						<strong><a href="http://www.ucsc.cl/donde-estamos/campus-santo-domingo/">Campus Santo Domingo</a> </strong>
						<strong>|</strong>
						<a href="http://www.ucsc.cl/donde-estamos/talcahuano/"> Talcahuano</a> | <a href="http://www.ucsc.cl/donde-estamos/los-angeles/">Los Ángeles</a> | <a href="http://www.ucsc.cl/donde-estamos/chillan/">Chillán</a> | <a href="http://www.ucsc.cl/donde-estamos/canete/">Cañete</a>
					</strong></p>
				</g:HTMLPanel>
			</g:VerticalPanel>
				
		</div>
		
			<div class="col-md-4 col-sm-5 col-xs-12">
			<g:VerticalPanel addStyleNames='{style.sitemap}' width="">
				<g:Label text="Site Map"/>
				<g:InlineHyperlink text="Home" targetHistoryToken="home"/>
				<g:InlineHyperlink text="Files" targetHistoryToken="files"/>
				<g:InlineHyperlink text="Plot" targetHistoryToken="plot" />
				<g:InlineHyperlink text="Metrics" targetHistoryToken="metric" />
				<g:InlineHyperlink text="Forum" targetHistoryToken="forum" />
				<g:InlineHyperlink text="Faq" targetHistoryToken="faq" />
				<g:InlineHyperlink text="Profile" targetHistoryToken="profile" />

			</g:VerticalPanel>
			
		</div>
		
	</g:HTMLPanel>
	
</ui:UiBinder> 