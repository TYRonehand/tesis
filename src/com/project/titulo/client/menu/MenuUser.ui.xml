<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.titlelabel {
		display: inline;
		width: 100%;
		height: 50px;
		cursor: pointer;
		cursor: hand;
		font-weight: bold;
		font-size: 28px;
		color: white;
	}
	
	.sessionlink {
		color: #646567;
	}
	
	.btnMenu {
		display: inline;
		width: 16.66%;
		height: 50px;
		cursor: pointer;
		cursor: hand;
		font-weight: bold;
		font-size: 16px;
		background-color: white;
		border: 0.5px solid white;
		color: #333;
	}
	
	.btnMenu:active {
		border-bottom: 5px solid #d12421;
		color: #d12421;
	}
	
	.btnMenu:hover {
		border-bottom: 5px solid #d12421;
		color: #d12421;
	}
	
	.flowPanel {
		width: 100%;
	}
	</ui:style>
	<gwt:HTMLPanel>

		<header class="header dark-bg">

			<div class="col-lg-6 col-md-6 col-sm-9 col-xs-12">
				<!--logotipo o nombre aplicacion inicia -->
				<gwt:Label addStyleNames='{style.titlelabel}'>AdminControl</gwt:Label>
				<!--logo fin -->
			</div>

			<!--seccion session -->
			<div class="col-lg-6 col-md-6 col-sm-3 col-xs-12">
				<div id="GWTusername" class="top-nav notification-row">
					<!-- seccion para dropdown -->
					<ul class="nav pull-right top-menu" align="right">
						<!-- Usuario dropdown inicia -->
						<li class="dropdown">
							<gwt:Hyperlink ui:field="exitLink" addStyleNames='{style.sessionlink}'
								targetHistoryToken="" text="Exit" width="117px" />

						</li>
						<!-- usuario dropdown fin -->
					</ul>
				</div>
			</div>

			<!--seccion menu de usuario -->
			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
				<div align="center" class="panel-menu-user">
					<gwt:FlowPanel addStyleNames='{style.flowPanel}'>
						<gwt:Button ui:field="usersBTN" text="Users"
							addStyleNames='{style.btnMenu}'>Users</gwt:Button>
						<gwt:Button ui:field="topicsBTN" text="Topics"
							addStyleNames='{style.btnMenu}'>Topics</gwt:Button>
					</gwt:FlowPanel>
				</div>
			</div>
		</header>

	</gwt:HTMLPanel>
</ui:UiBinder> 