<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.label{
		color: white;
	}
	.titleText{
		color: #ffffff; font-family: 'Roboto',sans-serif; font-size: 30px; font-weight: 800; line-height: 42px; margin: 0 0 24px; text-align: center; text-transform: uppercase; 
	}
	.resumeText{
		color: #f8f8f8; font-family: 'Raleway',sans-serif; font-size: 12px; font-weight: 800; line-height: 24px; margin: 0 0 24px;
	}
	.Logo{
		width:280px;	
	}
	.loginFields{
		padding-top:7px;
	}
	.loginBtn{
		padding-top:4px;
	}
	</ui:style>
	
	<gwt:HTMLPanel>

		<header class="header dark-bg">
		<div class="row" >
			<div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">
				<gwt:VerticalPanel width="100%">
					<gwt:Image  url="assets/img/banner2.png" width="280px"/>
				</gwt:VerticalPanel>
			</div>	
			
			
			<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">	
				<gwt:VerticalPanel addStyleNames='{style.loginFields}' width="100%" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_BOTTOM" height="90px">
					<gwt:HorizontalPanel  width="100%" height="74px" horizontalAlignment="ALIGN_LEFT"  verticalAlignment="ALIGN_MIDDLE">
						
						<gwt:VerticalPanel  height="100%" width="98%" horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_BOTTOM" >
							<gwt:InlineLabel addStyleNames='{style.label}'>Email</gwt:InlineLabel>
							<gwt:TextBox ui:field="mailInput" maxLength="30" visibleLength="30" textAlignment="ALIGN_CENTER" alignment="CENTER" height="44px" width="100%"></gwt:TextBox>
						</gwt:VerticalPanel>
						
						<gwt:VerticalPanel height="100%" width="98%" horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_BOTTOM">
							<gwt:InlineLabel addStyleNames='{style.label}'>Password</gwt:InlineLabel>
							<gwt:PasswordTextBox ui:field="passInput" maxLength="30" visibleLength="30" textAlignment="ALIGN_CENTER" alignment="CENTER" height="44px" width="100%" tabIndex="0"></gwt:PasswordTextBox>
						</gwt:VerticalPanel>
						
						<gwt:VerticalPanel height="100%" width="98%" horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_BOTTOM">
							<gwt:Button ui:field="submitBTN" addStyleNames='{style.loginBtn}' text="Log In" width="100%" height="44px" tabIndex="0"></gwt:Button>
						</gwt:VerticalPanel>
						
					</gwt:HorizontalPanel>	
				</gwt:VerticalPanel>
			</div>
		</div>
		</header>
	</gwt:HTMLPanel>
	
</ui:UiBinder> 