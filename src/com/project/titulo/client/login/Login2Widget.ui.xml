<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.label {
		color: #333;
		font-weight:400;
	}
	
	.titleText {
		color: #333;
		font-family: 'Roboto', sans-serif;
		font-size: 30px;
		font-weight: 800;
		line-height: 42px;
		margin: 0 0 24px;
		text-align: center;
		text-transform: uppercase;
	}
	
	.resumeText {
		color: #333;
		font-family: 'Raleway', sans-serif;
		font-size: 12px;
		font-weight: 800;
		line-height: 24px;
		margin: 0 0 24px;
	}
	
	.Logo {
		width: 280px;
	}
	
	.loginFields {
		padding-top: 7px;
	}
	
	.loginBtn {
		padding-top: 4px;
	}
	</ui:style>

	<gwt:HTMLPanel >
		
		<header class="header white-bg">
			<div class="row">
			
				
				<div class="hidden-lg hidden-md hidden-sm col-xs-12">
					<gwt:VerticalPanel horizontalAlignment="ALIGN_LEFT" width="100%" verticalAlignment="ALIGN_MIDDLE" height="96px">
						<gwt:Image  url="assets/img/logofix2.svg" width="100%"/>
					</gwt:VerticalPanel>
				</div>
				
				<div class="col-lg-6 col-md-6 col-sm-12 hidden-xs">
					<gwt:VerticalPanel horizontalAlignment="ALIGN_LEFT" width="100%" verticalAlignment="ALIGN_MIDDLE" height="108px">
						<gwt:Image  url="assets/img/logofix2.svg" width="520px"/>
					</gwt:VerticalPanel>
				</div>

				<div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
					<gwt:VerticalPanel addStyleNames='{style.loginFields}' width="100%" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE" spacing="4">
						<gwt:VerticalPanel width="100%" height="86px" verticalAlignment="ALIGN_BOTTOM" spacing="4">
							<gwt:HorizontalPanel width="100%" height="74px" verticalAlignment="ALIGN_BOTTOM">
	
								<gwt:VerticalPanel height="100%" width="98%"
									horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_BOTTOM">
									<gwt:InlineLabel addStyleNames='{style.label}'>User</gwt:InlineLabel>
									<gwt:TextBox ui:field="mailInput" maxLength="30"
										visibleLength="30" textAlignment="ALIGN_CENTER" alignment="CENTER"
										height="44px" width="100%"></gwt:TextBox>
								</gwt:VerticalPanel>
	
								<gwt:VerticalPanel height="100%" width="98%"
									horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_BOTTOM">
									<gwt:InlineLabel addStyleNames='{style.label}'>Password</gwt:InlineLabel>
									<gwt:PasswordTextBox ui:field="passInput"
										maxLength="30" visibleLength="30" textAlignment="ALIGN_CENTER"
										alignment="CENTER" height="44px" width="100%" tabIndex="0"></gwt:PasswordTextBox>
								</gwt:VerticalPanel>
	
								<gwt:VerticalPanel height="100%" width="98%"
									horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_BOTTOM">
									<gwt:Button ui:field="submitBTN" addStyleNames='{style.loginBtn}'
										text="Log In" width="100%" height="44px" tabIndex="0"></gwt:Button>
								</gwt:VerticalPanel>
	
							</gwt:HorizontalPanel>
						</gwt:VerticalPanel>	
					</gwt:VerticalPanel>
				</div>
			</div>
		</header>
	</gwt:HTMLPanel>

</ui:UiBinder> 