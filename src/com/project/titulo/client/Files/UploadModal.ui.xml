<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" >
	<ui:style>
		.submitBtn{
			padding-top:5px;
			width:100%;
			margin:2px;
		}
		.myFields {
		  display: block;
		  font-size: 12pt;
		  border: solid 1px gray;
		}
		.dialogBox{
    	  position: relative;
		  top: 0px;
		  left: 0px;
		  z-index: 99999;
		  display: block;
		  font-size: 16pt;
		  width:300px;
		  padding:8px;
		  align:center;
		  background:white;
		  border: 1px solid;
		  border-radius: 3px;
		  box-shadow: 10px 10px grey;
		  font-weight: bold;
		  
		}
		.verticalPanel{
		
		  padding:5px;
		  padding-top:12px;
		  display: block;
		  font-size: 16pt;
		  align:center;
		  background:#f0f0f0;
		  border-radius: 8px;
		}
		.HTMLheader{
			height:80%;
			width:80%;
			align:center;
			margin:auto;
		  background:black;
		}
		
	</ui:style>
	<g:HTMLPanel  >
	
    
		<g:DialogBox ui:field="dialogBox"  width="100%" addStyleNames='{style.dialogBox}'>
		
			<g:VerticalPanel ui:field="dialogVPanel" addStyleNames='{style.verticalPanel}' height="95%"  borderWidth="0" verticalAlignment="ALIGN_MIDDLE">
				
				<g:VerticalPanel ui:field="panel1">
					<g:Label text="Title file" direction="LTR"/>
					<g:TextBox ui:field="titleInput"  addStyleNames='{style.myFields}' height="16px" width="100%" direction="LTR" textAlignment="ALIGN_CENTER" focus="true" maxLength="49" ></g:TextBox>
					
					<g:Label text="Description file"/>
					<g:RichTextArea ui:field="descriptionInput"   addStyleNames='{style.myFields}' width="100%" ></g:RichTextArea>
				
					<g:Button ui:field="nextBtn" addStyleNames='{style.submitBtn}' width="100%" >Next</g:Button>
				</g:VerticalPanel>
				
				<g:VerticalPanel ui:field="panel2" visible="false">
					<g:Label text="Dimension" direction="LTR"/>
					<g:ListBox ui:field="dimensionList" addStyleNames='{style.myFields}' ></g:ListBox>
					
					<g:Label text="Label X" direction="LTR"/>
					<g:TextBox ui:field="labelxInput"  addStyleNames='{style.myFields}' height="16px" width="100%" direction="LTR" textAlignment="ALIGN_CENTER" focus="true" maxLength="49" ></g:TextBox>
					
					<g:Label text="Label Y" direction="LTR"/>
					<g:TextBox ui:field="labelyInput"  addStyleNames='{style.myFields}' height="16px" width="100%" direction="LTR" textAlignment="ALIGN_CENTER" focus="true" maxLength="49" ></g:TextBox>
					
					<g:Label text="Label Z" direction="LTR"/>
					<g:TextBox ui:field="labelzInput"  addStyleNames='{style.myFields}' height="16px" width="100%" direction="LTR" textAlignment="ALIGN_CENTER" focus="true" maxLength="49" ></g:TextBox>
					
					<g:Label text="Data results" direction="LTR"/>
					<g:RichTextArea ui:field="dataInput"   addStyleNames='{style.myFields}' width="100%" ></g:RichTextArea>
					
					<g:Button ui:field="createBtn" addStyleNames='{style.submitBtn}' width="100%" >Upload Data</g:Button>
				</g:VerticalPanel>
				
				<g:VerticalPanel ui:field="buttonPanel">
					<g:Button ui:field="cancelBtn" addStyleNames='{style.submitBtn}' width="100%" >Cancel</g:Button>
				</g:VerticalPanel>
							
			</g:VerticalPanel>
		</g:DialogBox>
		
	
	</g:HTMLPanel>
</ui:UiBinder> 