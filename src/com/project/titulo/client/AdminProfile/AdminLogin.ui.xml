<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.title{
		font-size:25px;
		font-weight:500;
		color:gray;
	}
	.loginPanel{
		background:#f0f0f0;
		border:solid 30px #f0f0f0;
		border-radius:25px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" height="">
			<g:VerticalPanel  addStyleNames='{style.loginPanel}' horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" height="295px" width="287px" >
				<g:Image url="assets/img/logofix2.svg" width="100%"/>
				<g:Label text="Administration"  addStyleNames='{style.title}' height="41px"/>
				<g:Label text="User"/>
				<g:TextBox ui:field="userBox" width="84%" maxLength="30"/>
				<g:Label text="Password"/>
				<g:PasswordTextBox ui:field="passBox" width="84%" maxLength="30"/>
				<g:VerticalPanel height="60px" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%">
					<g:Button ui:field="submitBtn" text="Submit" height="44px" width="84%"/>
				</g:VerticalPanel>
				<g:Hyperlink text="Go Back" targetHistoryToken="login" width="100%"/>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 