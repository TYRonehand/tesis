<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	.input{
		padding:5px;
	}
	.label{
		color:white;
	}
	.labelwarning{
		color:red;
	}
	.titleText{
		color: #ffffff; font-family: 'Raleway',sans-serif; font-size: 24px; font-weight: 800; line-height: 36px; margin: 0 0 24px; text-align: center;
	}
	.resumeText{
		color: #f8f8f8; font-family: 'Raleway',sans-serif; font-size: 16px; font-weight: 500; line-height: 32px; margin: 0 0 24px;
	}
	.logoucsc{
		padding-bottom:15px;
	}
	.panel{
		border: solid 8px black;
		padding: 40px;
		background: black;
	    filter: alpha(opacity=60);
	    /* IE */
	    -moz-opacity: 0.6;
	    /* Mozilla */
	    opacity: 0.6;
	}
	
	.HTMLheader{
		padding-top:50px
	}
	</ui:style>
	<gwt:HTMLPanel addStyleNames='{style.HTMLheader}'>
	
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		
			<div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
				<gwt:VerticalPanel addStyleNames='{style.panel}' spacing="10" horizontalAlignment="ALIGN_CENTER">
					<gwt:Label addStyleNames='{style.titleText}' text="What Do We Do?" horizontalAlignment="ALIGN_CENTER" width="100%"/>
					<gwt:Label addStyleNames='{style.resumeText}'  horizontalAlignment="ALIGN_CENTER" width="100%">
					"ASMOP web" is a system that seeks to provide solutions to academics or researchers in the area of ​​multi-objective optimization. Delivering graphic tools and indicators of differentiation for solutions that consider the basis of Pareto optimality. Try it NOW, it's free.
					</gwt:Label>
					
					<gwt:Label addStyleNames='{style.resumeText}'  horizontalAlignment="ALIGN_CENTER" width="100%">
					This is a project from "Universidad Católica Santísima Concepción, Chile".</gwt:Label>
					
					<gwt:Image addStyleNames='{style.logoucsc}' url="assets/img/logo_ucsc_init.png" width="150px" height="54px"></gwt:Image>
					
				</gwt:VerticalPanel>
			</div>
			
			<div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
				<gwt:VerticalPanel addStyleNames='{style.panel}' spacing="10" horizontalAlignment="ALIGN_CENTER" width="100%">
					<gwt:InlineLabel addStyleNames='{style.titleText}' text="Sign Up?" horizontalAlignment="ALIGN_CENTER" width="100%"/>
				</gwt:VerticalPanel>
				
				<gwt:VerticalPanel addStyleNames='{style.panel}' spacing="10" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="100%">

                	<gwt:InlineLabel  addStyleNames='{style.label}'  text="Country:" horizontalAlignment="ALIGN_CENTER" width="100%"/>
					<gwt:ListBox ui:field="countryBox" tabIndex="0"  focus="true" width="98%"/>

                	<gwt:HorizontalPanel  width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
                   		<gwt:VerticalPanel addStyleNames='{style.input}' width="96%">
	                    	<gwt:InlineLabel addStyleNames='{style.label}' text="Name:" horizontalAlignment="ALIGN_CENTER" width="100%"/>
							<gwt:TextBox ui:field="nameInput"  alignment="JUSTIFY" width="100%" textAlignment="ALIGN_CENTER" maxLength="30"  visibleLength="30" tabIndex="1" direction="LTR"/>
							<gwt:Label ui:field="labelError1" addStyleNames='{style.labelwarning}' width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER"  text="minimum lenght 3" visible="false"/>
						</gwt:VerticalPanel>
						
	                    <gwt:VerticalPanel addStyleNames='{style.input}' width="96%">
	                    	<gwt:InlineLabel addStyleNames='{style.label}' text="LastName:" horizontalAlignment="ALIGN_CENTER" width="100%"/>
							<gwt:TextBox ui:field="lastnameInput" alignment="JUSTIFY" width="100%" textAlignment="ALIGN_CENTER" maxLength="30"  visibleLength="30" direction="LTR" tabIndex="2"/>
							<gwt:Label ui:field="labelError2" addStyleNames='{style.labelwarning}' width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER" text="minimum lenght 3" visible="false"/>
	                    </gwt:VerticalPanel>
					</gwt:HorizontalPanel>

					<gwt:FlowPanel addStyleNames='{style.input}'>
                    	<gwt:InlineLabel addStyleNames='{style.label}' text="Email:" horizontalAlignment="ALIGN_CENTER" width="100%"/>
						<gwt:TextBox ui:field="mailInput" alignment="JUSTIFY" width="100%" textAlignment="ALIGN_CENTER" maxLength="30"  visibleLength="30"  direction="LTR" tabIndex="3"/>
						<gwt:Label ui:field="labelError3" addStyleNames='{style.labelwarning}' width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER" text="minimum lenght 6" visible="false"/>
					</gwt:FlowPanel>
					
					<gwt:HorizontalPanel width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">				
	               		
	               		<gwt:VerticalPanel addStyleNames='{style.input}' width="96%" height="69px" verticalAlignment="ALIGN_MIDDLE">
	                    	<gwt:InlineLabel addStyleNames='{style.label}' text="Password:" horizontalAlignment="ALIGN_CENTER" width="100%"/>
							<gwt:PasswordTextBox ui:field="passInput"  maxLength="30" width="100%" textAlignment="ALIGN_CENTER"  alignment="JUSTIFY" direction="LTR" tabIndex="4"/>
							<gwt:Label ui:field="labelError4" addStyleNames='{style.labelwarning}' width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER"  text="minimum lenght 6" visible="false"/>
						</gwt:VerticalPanel>
						
						<gwt:VerticalPanel addStyleNames='{style.input}' width="96%" height="69px" verticalAlignment="ALIGN_MIDDLE">
	                    	<gwt:InlineLabel addStyleNames='{style.label}' text="Repeat pass:" horizontalAlignment="ALIGN_CENTER" width="91px"/>
							<gwt:PasswordTextBox ui:field="pass2Input" maxLength="30" width="100%" textAlignment="ALIGN_CENTER"  alignment="JUSTIFY" direction="LTR" tabIndex="5"/>
							<gwt:Label ui:field="labelError5" addStyleNames='{style.labelwarning}' width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER"  text="minimum lenght 6" visible="false"/>
						</gwt:VerticalPanel>
						
                	</gwt:HorizontalPanel>
                	
                	<gwt:Button ui:field="registerBtn" text="Register" width="100%"  height="42px" tabIndex="6">Sign Up</gwt:Button>
	       		</gwt:VerticalPanel>
	       		<gwt:VerticalPanel addStyleNames='{style.panel}' spacing="10" horizontalAlignment="ALIGN_CENTER" width="100%">
					<gwt:InlineLabel addStyleNames='{style.titleText}' text="Lost Password?" horizontalAlignment="ALIGN_CENTER" width="100%"/>
					<gwt:Hyperlink ui:field="recoveryLink" text="I forget password" targetHistoryToken="" width="117px" />
				</gwt:VerticalPanel>
	       		
			</div>
		</div>
	
	
	</gwt:HTMLPanel>
</ui:UiBinder> 