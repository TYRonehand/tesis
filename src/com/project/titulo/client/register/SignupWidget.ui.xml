<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.observation{
		font-size: 10pt;
		color: #333;
	}
	.panel {
		padding: 15px;
		background: white;
		border: 8px solid white;
		height:78vh;
	}
	
	.panelmargin {
		border: 5px;
	}
	
	.HTMLheader {
		padding-top: 110px
	}
	
	.input {
		padding: 5px;
	}
	
	.label {
		color: #333;
	}
	
	.labelwarning {
		color: red;
	}
	
	.titleText {
		text-transform: uppercase;
		color: #333;
	    font-family: Roboto,sans-serif;
		font-size: 24px;
		font-weight: 800;
		line-height: 36px;
		margin: 0 0 24px;
		text-align: center;
	}
	
	.resumeText {   
		padding: 20px 10% 40px 10%;
		color: #333;
	    font-size: 18px;
	    font-family: Roboto,sans-serif;
		font-weight: 700;
		line-height: 32px;
		margin: 0 0 24px;
	}
	
	.icons {
		width: 54px;
		height: 54px;
	}
	
	.iconText {    
		padding: 20px 10% 40px 10%;
		color: #333;
	    font-size: 18px;
	    font-family: Roboto,sans-serif;
		font-weight: 700;
		line-height: 32px;
		margin: 0 0 24px;
	    
	}
	
	.iconsPanel {
		padding: 10px 10px 10px 10px;
	}
	
	.logoucsc {
		padding-bottom: 15px;
	}
	
	</ui:style>
	<gwt:HTMLPanel addStyleNames='{style.HTMLheader}'>
		<div class="row">

				<div class="col-lg-8 col-md-6 col-sm-12 col-xs-12">
					<gwt:VerticalPanel addStyleNames='{style.panel}'
						horizontalAlignment="ALIGN_CENTER" width="100%">
						<gwt:VerticalPanel horizontalAlignment="ALIGN_CENTER"
							verticalAlignment="ALIGN_MIDDLE" width="100%">

							<gwt:Label addStyleNames='{style.resumeText}' width="100%" text="ASMOP WEBTOOL is a system that seeks to provide solutions to academics or researchers in the area of ​​multi-objective optimization. Delivering graphic tools and indicators of differentiation for solutions that consider the basis of Pareto optimality. Try it now.">
								ASMOP WEBTOOL is a system that seeks to provide solutions to
								academics or researchers in the area of ​​multi-objective
								optimization. Delivering graphic tools and indicators of
								differentiation for solutions that consider the basis of Pareto
								optimality. Try it now, it's FREE.
							</gwt:Label>

							<gwt:FlowPanel addStyleNames='{style.iconsPanel}'>
								<gwt:Image addStyleNames='{style.icons}'
									url="assets/img/icons/plotlogo.png" />
								<gwt:InlineLabel addStyleNames='{style.iconText}'
									text="Plot Pareto Fronts" />
							</gwt:FlowPanel>

							<gwt:FlowPanel addStyleNames='{style.iconsPanel}'>
								<gwt:Image addStyleNames='{style.icons}'
									url="assets/img/icons/metriclogo.png" />
								<gwt:InlineLabel addStyleNames='{style.iconText}'
									text="Use Performance metrics" />
							</gwt:FlowPanel>

							<gwt:FlowPanel addStyleNames='{style.iconsPanel}'>
								<gwt:Image addStyleNames='{style.icons}'
									url="assets/img/icons/communitylogo.png" />
								<gwt:InlineLabel addStyleNames='{style.iconText}'
									text="Share and get answers" />
							</gwt:FlowPanel>

							<gwt:FlowPanel addStyleNames='{style.iconsPanel}'>
								<gwt:InlineLabel addStyleNames='{style.iconText}'
									text="...and more!!" />
							</gwt:FlowPanel>

						</gwt:VerticalPanel>
					</gwt:VerticalPanel>
				</div>

				<div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">


					<gwt:VerticalPanel addStyleNames='{style.panel}'
						horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_TOP"
						width="100%">

						<gwt:VerticalPanel addStyleNames='{style.panelmargin}'
							horizontalAlignment="ALIGN_CENTER" width="100%"
							verticalAlignment="ALIGN_MIDDLE">

							<gwt:InlineLabel addStyleNames='{style.titleText}'
								text="Sign Up" horizontalAlignment="ALIGN_CENTER" width="100%" />

							<gwt:FlowPanel addStyleNames='{style.input}'>
								<gwt:Label addStyleNames='{style.label}' text="*Country:"
									horizontalAlignment="ALIGN_LEFT" />
								<gwt:ListBox ui:field="countryBox" tabIndex="0"
									focus="true" width="98%" />
							</gwt:FlowPanel>

							<gwt:HorizontalPanel width="100%"
								horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
								<gwt:VerticalPanel width="96%">
									<gwt:InlineLabel addStyleNames='{style.label}'
										text="*Name:" horizontalAlignment="ALIGN_CENTER" width="100%" />
									<gwt:TextBox ui:field="nameInput" alignment="JUSTIFY"
										width="100%" textAlignment="ALIGN_CENTER" maxLength="30"
										visibleLength="30" tabIndex="1" direction="LTR" />
									<gwt:Label ui:field="labelError1" addStyleNames='{style.labelwarning}'
										width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER"
										text="minimum lenght 3" visible="false" />
								</gwt:VerticalPanel>

								<gwt:VerticalPanel width="96%">
									<gwt:InlineLabel addStyleNames='{style.label}'
										text="*LastName:" horizontalAlignment="ALIGN_CENTER" width="100%" />
									<gwt:TextBox ui:field="lastnameInput" alignment="JUSTIFY"
										width="100%" textAlignment="ALIGN_CENTER" maxLength="30"
										visibleLength="30" direction="LTR" tabIndex="2" />
									<gwt:Label ui:field="labelError2" addStyleNames='{style.labelwarning}'
										width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER"
										text="minimum lenght 3" visible="false" />
								</gwt:VerticalPanel>
							</gwt:HorizontalPanel>

							<gwt:FlowPanel addStyleNames='{style.input}'>
								<gwt:Label addStyleNames='{style.label}' text="*Email:"
									horizontalAlignment="ALIGN_LEFT" />
								<gwt:TextBox ui:field="mailInput" alignment="JUSTIFY"
									width="100%" textAlignment="ALIGN_CENTER" maxLength="30"
									visibleLength="30" direction="LTR" tabIndex="3" />
								<gwt:Label ui:field="labelError3" addStyleNames='{style.labelwarning}'
									width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER"
									text="minimum lenght 6" visible="false" />
							</gwt:FlowPanel>

							<gwt:HorizontalPanel width="100%"
								horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">

								<gwt:VerticalPanel width="96%" height="69px"
									verticalAlignment="ALIGN_MIDDLE">
									<gwt:InlineLabel addStyleNames='{style.label}'
										text="*Password:" horizontalAlignment="ALIGN_CENTER" width="100%" />
									<gwt:PasswordTextBox ui:field="passInput"
										maxLength="30" width="100%" textAlignment="ALIGN_CENTER"
										alignment="JUSTIFY" direction="LTR" tabIndex="4" />
									<gwt:Label ui:field="labelError4" addStyleNames='{style.labelwarning}'
										width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER"
										text="minimum lenght 6" visible="false" />
								</gwt:VerticalPanel>

								<gwt:VerticalPanel width="96%" height="69px"
									verticalAlignment="ALIGN_MIDDLE">
									<gwt:InlineLabel addStyleNames='{style.label}'
										text="*Repeat:" horizontalAlignment="ALIGN_CENTER" width="91px" />
									<gwt:PasswordTextBox ui:field="pass2Input"
										maxLength="30" width="100%" textAlignment="ALIGN_CENTER"
										alignment="JUSTIFY" direction="LTR" tabIndex="5" />
									<gwt:Label ui:field="labelError5" addStyleNames='{style.labelwarning}'
										width="100%" direction="RTL" horizontalAlignment="ALIGN_CENTER"
										text="minimum lenght 6" visible="false" />
								</gwt:VerticalPanel>
								
								

							</gwt:HorizontalPanel>
							
							<gwt:FlowPanel addStyleNames='{style.input}'>
								<gwt:Button ui:field="registerBtn" text="Sign Up"
									width="96%" height="42px" tabIndex="6"></gwt:Button>
							</gwt:FlowPanel>

							<gwt:VerticalPanel height="28px" width="100%" >
								<gwt:Label addStyleNames='{style.observation}' text="(*) Obligatory field." horizontalAlignment="ALIGN_LEFT"></gwt:Label>
							</gwt:VerticalPanel>
							
							<gwt:InlineLabel addStyleNames='{style.titleText}'
								text="Lost Password?" horizontalAlignment="ALIGN_CENTER" width="100%" />
							<gwt:Hyperlink ui:field="recoveryLink" text="I forgot my password" targetHistoryToken="recovery" width="100%" />

						</gwt:VerticalPanel>



					</gwt:VerticalPanel>


				</div>
			</div>

	</gwt:HTMLPanel>
</ui:UiBinder> 