<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	.submitBtn {
		padding-top: 5px;
		width: 100%;
		margin: 2px;
	}
	
	</ui:style>
	<gwt:HTMLPanel>
	
		<div class="row">
			<div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
				<section class="panel">
				
					<!--Titulo -->
					<div class="panel-heading">
						<h3 class="panel-title">
							<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion"
								href="#collapseOne">
								Tools
							</a>
						</h3>
					</div>

					<!--Texto -->
					<div id="collapseOne" class="panel-collapse collapse in">
						<div class="panel-body">
							<div class="btn-group btn-group-justified">
								<gwt:Button ui:field="backBtn" addStyleNames='{style.submitBtn}'
									width="100%">Go Back</gwt:Button>
							</div>
						</div>
					</div>
					
				</section>

			</div>
		
			<div class="col-lg-10 col-md-9 col-sm-8 col-xs-12">
				<section class="panel">
					<header class="panel-heading">
						<h3 class="panel-title">Plotting - HighCharts</h3>
					</header>
					<div class="panel-body">
					
						<gwt:VerticalPanel ui:field="plotPanel" width="100%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
						
						</gwt:VerticalPanel>
					
					
					</div>
				</section>
			</div>
		</div>
	</gwt:HTMLPanel>
</ui:UiBinder> 