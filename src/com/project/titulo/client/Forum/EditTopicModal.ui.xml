<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.submitBtn {
		padding-top: 5px;
		width: 100%;
		margin: 2px;
	}
	
	.myFields {
		display: block;
		font-size: 12pt;
		border: solid 1px gray;
	}
	
	.dialogBox {
		position: relative;
		top: 0px;
		left: 0px;
		z-index: 99999;
		display: block;
		font-size: 16pt;
		width: 300px;
		padding: 8px;
		align: center;
		background: white;
		border: 1px solid;
		border-radius: 3px;
		box-shadow: 10px 10px grey;
		font-weight: bold;
	}
	
	.verticalPanel {
		padding: 5px;
		padding-top: 12px;
		display: block;
		font-size: 16pt;
		align: center;
		background: #f0f0f0;
		border-radius: 8px;
	}
	
	.HTMLheader {
		height: 80%;
		width: 80%;
		align: center;
		margin: auto;
		background: black;
	}
	</ui:style>
	<g:HTMLPanel addStyleNames='{style.HTMLheader}'>


		<g:DialogBox ui:field="dialogBox" width="100%"
			addStyleNames='{style.dialogBox}'>

			<g:VerticalPanel ui:field="dialogVPanel"
				addStyleNames='{style.verticalPanel}' height="100%" borderWidth="0"
				verticalAlignment="ALIGN_MIDDLE">

				<g:Label text="Title" direction="LTR" />
				<g:TextBox ui:field="titleInput" addStyleNames='{style.myFields}'
					height="16px" width="100%" direction="LTR" textAlignment="ALIGN_CENTER"
					focus="true" maxLength="250"></g:TextBox>

				<g:Label text="Response" />
				<g:TextArea ui:field="descriptionInput" addStyleNames='{style.myFields}'
					width="100%" />
				<g:Label text="(max 800 characters)" />

				<g:VerticalPanel ui:field="buttonPanel">
					<g:Button ui:field="createBtn" addStyleNames='{style.submitBtn}'
						width="100%">Edit Post</g:Button>
					<g:Button ui:field="cancelBtn" addStyleNames='{style.submitBtn}'
						width="100%">Cancel</g:Button>
				</g:VerticalPanel>

			</g:VerticalPanel>

		</g:DialogBox>


	</g:HTMLPanel>
</ui:UiBinder> 